    //复估单受理
    function acceptRevaluation(id, revaluation) {
        confirm = layer.confirm('确定受理复估:' + revaluation + '？', {
            btn: ['确定', '取消']
        }, function () {
            $.ajax({
                url: '@Url.Action("AcceptRevaluation", "Revaluation")',
                dataType: "json",
                type: "post",
                data: {
                    'id': id
                },
